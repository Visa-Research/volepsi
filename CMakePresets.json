        "FETCH_AUTO": true,
        "VOLE_PSI_PIC": true,
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": "/usr/local/opt/openssl/",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
      },
      "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "macOS" ] } }
    }
  ]
